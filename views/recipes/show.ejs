<html lang="en">
<%- include("../partials/head/_head") %>

  <body>
    <%- include("../partials/navbar/_navbar") %>

      <section class="header_Bar">
        <div>
          <h1 class="ui block header">
            <%= recipe.title %>
          </h1>
        </div>
      </section>


      <div class="ui equal width grid">
        <div class="equal width row">
          <div class="column">
            <figure class="content">
              <img src="<%= recipe.image%> " alt="recipe image" class="ui large centered rounded image"
                class="show_image">
            </figure>
          </div>
          <div class="column" class="show_image_container">
            <div class="column" id="ingredients_list">
              <div class="ui bulleted list middle aligned">
                <h3 class="ui large centered header"> Ingredients</h3>
                <% recipe.ingredients.forEach((ingredient)=> { %>
                  <div class="item">
                    <%= ingredient %>
                  </div>
                  <% }) %>
              </div>

              <div class="ui content centered row">
                <a href="/recipes/<%= recipe.id %>/edit " class="ui button">Edit</a>

                <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST">
                  <button class="ui orange button">Delete</button>
                </form>
              </div>
            </div>
          </div>
          <div class="ui colum centered grid">
            <div class="column">
              <div class="column" id="instructions_list">
                <div class="ui ordered list">
                  <h3 class="ui large centered header"> Instructions</h3>
                  <% recipe.instructions.forEach(instruction=>{ %>
                    <div class="item">
                      <%= instruction %>
                    </div>
                    <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>




      <!-- THIS IS THE REVIEWS SECTION -->

      <div class="container" id="reviews_container">
        <section>
            <h1 class = "ui block centered header" id="reviews_header">Comment section</h1>
        </section>

        <div class="ui left floated segment">
          <section class="form">
            <div class="ui attached message">
              <div class="content">
                <div class="ui huge header">Rate Your Favorite Recipe!</div>
              </div>
              <p>Fill out the field below to submit your review!</p>
            </div>

            <form action="/reviews" method="POST" class="ui large form attached fluid segment">
              <div class="field">
                <label for="label">Rating </label>
                <input type="number" name="rating" min="0" max="5" placeholder="0-5">
              </div>
              <div class="field">
                <label>Short Text</label>
                <textarea rows="3" name="content" placeholder="Leave a comment/review!"></textarea>
              </div>
              <div>
                <input type="hidden" name="recipe" value="<%= recipe.id%>">
                <button class="ui orange button">Save</button>
                <a class="ui black button" href="../recipes/">Discard</a>
              </div>
            </form>
          </section>
        </div>


        <!-- This is where the reviews will go  -->


      <div class="ui three column grid" id= "grid_containers">
        <% reviews.forEach(review => { %>
          <div class="column">
            <div class="ui segment">
              <a class="avatar">
                <img class="ui small image centered" src="<%= review.user.avatar %> ">
              </a>
              <div class="ui center aligned container ">
                <a class="User"> 
                  <%= review.user.username %> 
                </a>
                <div class="metadata">
                  <div class="date">
                    <%= new Date(review.createdAt).toLocaleString() %> 
                  </div>
                  <div class="rating">
                    <i class="star icon"></i>
                    <%= review.rating %> 
                  </div>
                </div>
                <div class="text">
                  <%= review.content %>
                </div>
                <form action="/reviews/<%= review.id %> ?_method=DELETE" method="POST">
                  <a href="../recipes/" class="ui black button">Delete</a>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }) %>


  </body>

</html>