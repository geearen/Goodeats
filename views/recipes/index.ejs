<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="shortcut icon" href="/public/assets/favicon/favicon.ico" type="image/x-icon">
  <!-- font awesome cdn -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  
  <!-- semantic ui cdn plus jquery -->
  <link 
  rel="stylesheet" 
  href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>


  <!-- main css -->
  <link rel="stylesheet" href="/styles/src/main.css">

  <!-- main js -->
  <script src="/scripts/jquery.js" defer></script>
  <title>Goodeats</title>
</head>


<body class="pusher">
  <img class= "brand logo"src="/assets/favicon/goodeats_logo.png" alt="goodeats logo">
<div class="ui menu">
  <a class="item" href="/recipes">GoodEats</a>
  <div class="right menu">
    <a class="item"  href="/recipes/new">New Recipe</a>
    <a class="item"  href="/login">Login</a>
    <a class="item"  href="/register">Register</a>
  </div>
</div>

<div class="ui center aligned segment">
    <h2 class="ui right floated header orange">Recipe Spotlight</h2>
    <div class="ui clearing divider"></div>

  <div class="ui two column very relaxed grid container">
    <% function randomRecipe () { %>
      <% const rand = Math.floor(Math.random()*recipes.length) %> 
      <% const randRecipe = recipes[rand] %> 
    
    <div class="column">
      <h1 class="spotlight__title"><%= randRecipe.title %> </h1>
    </div>
    
    <div class="column">
        <a href="" class="ui segment medium image">
          <img src="<%= randRecipe.image %> " class= "spotlight__image">
        </a>
        <% } %>
        <% randomRecipe(); %> 
    </div>
  </div>
</div>

<h3 class="ui block header">
  All Recipes
</h3>
<div class="ui three column grid">
  <% for( let index = 0; index < recipes.length; index++ ) { %>
    <% const recipe = recipes[index] %> 
    <div class="column">
      <div class="ui segment">
        <div class="ui blue ribbon label">
          <i class="spoon icon"></i> <%= recipe.category %> 
        </div>
        <a href="" class="">
          <img class ="ui large rounded image"
          src="<%= recipe.image %>" 
          alt= "image placeholder"
          >
        </a>
      </div>
    </div>
    
    <% } %>
</div>



</body>
</html>