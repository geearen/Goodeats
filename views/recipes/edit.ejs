<html lang="en">
<%- include("../partials/head/_head") %>

<body>
  <%- include("../partials/navbar/_navbar") %>

  <section class="container">
    <form action="/recipes/<%= recipe.id %>?_method=PUT" method="post">
    
    <div class="ui attached message">
      <div class="content">
        <div class="ui huge header"> New Recipe</div>
      </div>
      <p>Fill out the field below to submit your recipe!</p>
    </div>
    
    <form class="ui large form attached fluid segment" action="/recipes/<%= recipe.id %> " method="post">
      <div class="field">
        <label for="title">Recipe Title </label>
        <input 
        type="text" 
        name="title"
        id="recipe-title"
        value="<%= recipe.title %> "
        >
      </div>
    
      <div class="field">
        <label for="image">Image</label>
        <input 
        type="text" 
        name="image"
        value="<%= recipe.image %>"
        >
      </div>
    
      <div class="field">
        <label for="category">Category</label>
        <input 
        type="text" 
        name="category"
        value="<%= recipe.category %> "
        >
      </div>
    <% recipe.ingredients.forEach(ingredient => { %>

      <div class="field">
        <label for="ingredients">Ingredients</label>
        <input 
        type="text" 
        name="ingredients"
        value="<%= ingredient %> "
        >
      </div>
    <% }) %>
    
    <% recipe.instructions.forEach(instruction => { %>
      <div class="field">
        <label for="instructions">Instructions</label>
        <input 
        type="text" 
        name="instructions"
        value="<%= instruction %> ">
      </div>
    
    <% }) %> 
    
      <div class="content">
        <button class="positive ui button ">Edit</button>
        <a href="/recipes/<%= recipe.id %> " class="negative ui button">
          Cancel
        </a>
      </div>
      
    </form>
    </form>
  </section>
</body>
</html>